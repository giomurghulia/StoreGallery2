<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="22dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/imageCard_cardView"
        android:layout_width="150dp"
        android:layout_height="210dp"
        app:cardBackgroundColor="#EDF1FA"
        app:cardCornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/productImage_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="15dp"
            tools:src="@drawable/ic_item" />

        <ImageView
            android:id="@+id/liked_image"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="start"
            android:layout_marginStart="16dp"
            android:layout_marginTop="150dp"
            android:background="@drawable/shape_white_oval"
            android:padding="10dp"
            android:src="@drawable/ic_heart" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/title_text"
        android:layout_width="0dp"
        android:layout_height="17dp"
        android:layout_marginTop="12dp"
        android:textColor="#96A7AF"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="@id/imageCard_cardView"
        app:layout_constraintStart_toStartOf="@id/imageCard_cardView"
        app:layout_constraintTop_toBottomOf="@id/imageCard_cardView"
        app:layout_goneMarginTop="12dp"
        tools:text="Belt suit blazer" />

    <TextView
        android:id="@+id/price_text"
        android:layout_width="0dp"
        android:layout_height="17dp"
        android:layout_marginTop="6dp"
        android:textColor="#ffffff"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/imageCard_cardView"
        app:layout_constraintStart_toStartOf="@id/imageCard_cardView"
        app:layout_constraintTop_toBottomOf="@id/title_text"
        tools:text="150" />
</androidx.constraintlayout.widget.ConstraintLayout>